<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width" />
        <title>Flugbuech</title>
    </head>
    <body>
        <h1>Flugbuech</h1>

        {% if user %}
        <p>Welcome, {{ user.username }}! <a href="/auth/logout/">Logout</a></p>
        {% else %}
        <p><a href="/auth/login/">Login</a></p>
        {% endif %}

        {% if flash %}
            <p class="flash">Error: {{ flash }}</p>
        {% endif %}

        {% block content %}{% endblock %}
    </body>
</html>
